    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="form-horizontal" method="post" action="/Authentication/UserLogin">
                            <h4>Returning User Login</h4>
                            <hr />
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="col-md-4 control-label">User Name:</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="userName" value="" autofocus>
                                    <ASP:RequiredFieldValidator ControlToValidate="userName"
                                                                Display="Static" ErrorMessage="Please Enter User Name" runat="server"
                                                                ID="vUserName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Password:</label>
                                <div class="col-md-6">
                                    <input id="password" type="password" class="form-control" name="password">
                                    <i class="fa fa-eye input-field" onclick="togglePassword()"></i>
                                    <ASP:RequiredFieldValidator ControlToValidate="password"
                                                                Display="Static" ErrorMessage="Please Enter Password" runat="server"
                                                                ID="vUserPass" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4"></div>
                                <div class="col-md-6">
                                    <input type="checkbox" id="rememberMe" name="rememberMe" class="btn btn-default" /> Remember Me
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4"></div>
                                <div class="col-md-6">
                                    <input type="submit" id="submit" name="submit" value="Submit" class="btn btn-default" /> <input type="reset" id="reset" name="reset" class="btn btn-default" />
                                </div>
                            </div>
                        </form>
                        <div class="text-danger" style="text-align:center">@Request.Params["msg"]</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

