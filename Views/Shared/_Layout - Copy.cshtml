<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
    <title>Cellable - @ViewBag.Title</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <asp:ScriptReference Name="MsAjaxBundle" />
    <asp:ScriptReference Name="jquery" />
    <asp:ScriptReference Name="bootstrap" />
    <asp:ScriptReference Name="WebFormsBundle" />
    <asp:ScriptReference Name="WebUIValidation.js" Assembly="System.Web" Path="~/Scripts/WebUIValidation.js" />
    <asp:ScriptReference Name="MenuStandards.js" Assembly="System.Web" Path="~/Scripts/MenuStandards.js" />
    <asp:ScriptReference Name="GridView.js" Assembly="System.Web" Path="~/Scripts/GridView.js" />
    <asp:ScriptReference Name="DetailsView.js" Assembly="System.Web" Path="~/Scripts/DetailsView.js" />
    <asp:ScriptReference Name="TreeView.js" Assembly="System.Web" Path="~/Scripts/TreeView.js" />
    <asp:ScriptReference Name="WebParts.js" Assembly="System.Web" Path="~/Scripts/WebParts.js" />
    <asp:ScriptReference Name="Focus.js" Assembly="System.Web" Path="~/Scripts/Focus.js" />
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v5.0"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .twitter-follow-button[style] {
            vertical-align: text-bottom !important;
        }

        .twitter-mention-button[style] {
            vertical-align: text-bottom !important;
        }

        .fb-like[style] {
            vertical-align: top !important;
        }

        body.custom-background {
            background-color: #EBEFF6;
        }

        .checked {
            color: orange;
        }
    </style>

    <script type="text/javascript">
        // Redirect User 1 Minute Before Session Timeout
        var sessionTimeoutWarning = @Session.Timeout- 1;

        var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
        setTimeout('SessionEnd()', sTimeout);

        window.history.forward();
        function noBack()
        {
            window.history.forward();
        }

        function SessionEnd() {
            window.location = "/Users/Cancel";
        }
    </script>

</head>
<body onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">
    <div id="fb-root"></div>
    <table style="position:fixed; top:0; width:100%; height:20px; z-index:100">
        <tr>
            <td colspan="4" style="background-color:black; height:80px;">
                <table style="width:100%">
                    <tr style="vertical-align:middle; width: 100%; position: fixed;">
                        <td style="width:100%; text-align:center; position: fixed;" class="Header">
                            <h2>@Html.ActionLink("Cellable", "Index", "Home", new { }, new { style = "color:lawngreen;" })</h2>
                            @{ var total = int.Parse(Session["AvgStars"].ToString()); }
                            @for (int i = 1; i <= total; i++ )
                            {
                                <span class='fa fa-star checked'></span>
                            }
                            (ratings: @Session["TotalStars"])
                        </td>
                        <td style="text-align:left; vertical-align:middle; width:100%; position: fixed;">
                            <div style="display: inline-block; width:100%; position: fixed;">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "NavLink" })</div>
                            <div style="display: inline-block; width:100%; position: fixed;">@Html.ActionLink("About", "About", "Home", new { }, new { @class = "NavLink" })</div>
                            @if (System.Web.HttpContext.Current.Session["LoggedInUser"] != null && Session["LoggedInUser"].ToString() != "")
                            {
                                <div style="display: inline-block; width:100%; position: fixed;">@Html.ActionLink("Logout", "Cancel", "Users", new { }, new { @class = "NavLink" })</div>
                            }
                            else
                            {
                                <div style="display: inline-block; width:100%; position: fixed;">@Html.ActionLink("Login", "Login", "Users", new { }, new { @class = "NavLink" })</div>
                            }
                            <div  style="display: inline-block; width:100%; position: fixed;">@Html.ActionLink("Sell", "Phones", "Phones", new { }, new { @class = "NavLink" })</div>
                            @if (System.Web.HttpContext.Current.Session["LoggedInUser"] != null && Session["LoggedInUser"].ToString() != "")
                            {
                                <div  style="display: inline-block; width:60px">@Html.ActionLink("Tracking", "TrackOrders", "Users", new { }, new { @class = "NavLink" })</div>
                            }
                        </td>
                        @*<td style="width:7%; text-align:left">@Html.ActionLink("Register", "Register", "Users", new { }, new { @class = "NavLink" })</td>*@
                        <td style="width:100%; text-align:left; position: fixed;">
                            @using (Html.BeginForm("SearchResults", "Phones", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <input type="search" id="searchString" name="searchString" placeholder="Search For Your Phone" style="width:400px">@Html.Raw("&nbsp;&nbsp;")
                                <button type="submit" name="submit" id="submit" value="submit" style="background-color:black; border-color:black"><i class="fa fa-search" style="color:lawngreen"></i></button>
                            }
                        </td>
                        <td  style="width:100%; text-align:center;">
                            @if (System.Web.HttpContext.Current.Session["LoggedInUser"] != null && Session["LoggedInUser"].ToString() != "")
                            {
                                <i class="LoggedIn">Logged in as:<br /><div style="color:lawngreen">@Session["LoggedInUser"]</div></i>
                            }
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <table style="width:100%">
        <tr>
            <td style="padding:20px; width:100%; vertical-align:top;">
                <div style="height:50px"></div>
                @RenderBody()
            </td>
        </tr>
    </table>
    <table style="position:fixed; bottom:0; width:100%; background-color:black">
        <tr>
            <td style="text-align:left; width:5%;">
            </td>
            <td style="text-align:left; width:30%;">
                <div class="Header">&copy; @DateTime.Now.Year - Cellable</div>
            </td>
            <td style="text-align:center; width:100%;">
                <a href="mailto:admin@cellable.com" class="NavLink">Support</a>
                <div style="width:100%; display:inline-block"></div>
                @Html.ActionLink("About Us", "About", "Home", new { }, new { @class = "NavLink" })
                <div style="width:100%; display:inline-block"></div>
                @Html.ActionLink("Contact Us", "Contact", "Home", new { }, new { @class = "NavLink" })
            </td>
            <td style="text-align:right; width:30%; height:40px;">
                <a href="https://www.facebook.com/CellableApp/"><i class="fa fa-facebook" style="color:grey;"></i></a>
                &nbsp;
                <a href="https://instagram.com/Cellable"><i class="fa fa-instagram" style="color:grey"></i></a>
            </td>
            <td style="width:5%"></td>
        </tr>
    </table>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
