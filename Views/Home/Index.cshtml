@model IEnumerable<CellableMVC.Models.Phone>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

<div style="height:50px"></div>
<table style="width:100%;">
    <tr>
        <td>
            <table style="width:60%; margin-left:auto; margin-right:auto;">
                <tr>
                    <td style="text-align:center">
                        <h2>Sell your used cell phone for cash in 5 EASY Steps!</h2>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 15px;">
                        Selling your used cell phone to Cellable is so easy and only takes a few minutes of your time.
                        We assess the value of your used cell phone and offer the most cash you can get for your used phone.
                        In the United States, the average person doesn’t sell their old phones, chances are, there’s a
                        used phone or two stashed away in the junk drawer of your home.  So, what do you do with this
                        clutter of old used cell phones? It’s simple: Sell sell it to Cellable, the most trusted location
                        to sell a used cell phone in Atlanta or the United States. Depending on the condition of the phone,
                        you can sell us your used cell phone for up to $250 for just one used cell phone.
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="width:100%; text-align:center" colspan="2">
            <a href="/Phones/Phones/"><img src="~/Pictures/sell.jpg "></a>
        </td>
    </tr>
    <tr><td style="height:50px"></td></tr>
</table>
<table style="width:70%; text-align:center; margin-left:auto; margin-right:auto;">
    <tr>
        @foreach (var item in Model)
        {
            <td style="width:33%; text-align:center;">
                <a class="btn btn-default" href="/Phones/PhoneVersions/@item.PhoneId" style="font-size: 50px; height: 350px; left: 58px; width: 250px; padding: 10px; border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); margin-top: 50px; ">
                    <img src="~/Pictures/@item.ImageName" style="width: 185px; height: 224px; left: 200px; margin-top: 27px; padding-top: 10px;" />
                    <p style="font-family: 'HP Simplified'; padding-top: 50px; font-size: 25px; width: 249px; height: 70px; color: #000; text-align: center; margin-right: 50px;">@Html.DisplayFor(modelItem => item.Brand)</p>
                </a>
            </td>
        }
    </tr>
</table>